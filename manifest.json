{
    "name": "BabaScript",
    "description": "Automatisation de t√¢ches sur divers sites de vente de sneakers. #BabaFinder",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "popup.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "https://www.courir.com/*",
                "<all_urls>"
            ],
            "js": [
                "modules/courir.js",
                "modules/solebox.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        },
        "icons": {
            "16": "images/icon.png",
            "32": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    }
}